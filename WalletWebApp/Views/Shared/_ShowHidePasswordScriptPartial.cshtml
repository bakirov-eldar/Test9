<script>
    let btn = $('.pass-group button');
    btn.on('click', function (event) {
        event.preventDefault();
        if ($('.pass-group input').attr("type") == "text") {
            $('.pass-group input').attr('type', 'password');
            $('.pass-group i').addClass("bi-eye-slash");
            $('.pass-group i').removeClass("bi-eye");
        } else if ($('.pass-group input').attr("type") == "password") {
            $('.pass-group input').attr('type', 'text');
            $('.pass-group i').removeClass("bi-eye-slash");
            $('.pass-group i').addClass("bi-eye");
        }
        btn.blur();
    });
</script>